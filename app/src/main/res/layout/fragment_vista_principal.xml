<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".VistaPrincipalFragment">

    <TextView
        android:id="@+id/bienvenido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bienvenido"
        android:textColor="#000"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/nombre"
        android:layout_below="@+id/bienvenido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre"
        android:textColor="#000"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"/>


    <Button
        android:id="@+id/Button_Curriculum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Curriculum"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/nombre"
        android:background="@drawable/boton1"
        android:textColor="#fff"
        android:padding="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="40dp"/>


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imagen"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@+id/nombre"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        />

    <Button
        android:id="@+id/Button_OfertasEmpleos"
        android:layout_width="200dp"
        android:layout_height="85dp"
        android:text="Ofertas de Empleos"
        android:textSize="25dp"
        android:background="@drawable/boton1"
        android:textColor="#fff"
        android:layout_above="@+id/Button_MisOfertas"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"/>

    <Button
        android:id="@+id/Button_MisOfertas"
        android:layout_width="200dp"
        android:layout_height="85dp"
        android:text="Mis ofertas"
        android:textSize="25dp"
        android:background="@drawable/boton1"
        android:textColor="#fff"
        android:layout_above="@+id/Button_TrabajosFinalizados"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"/>

    <Button
        android:id="@+id/Button_TrabajosFinalizados"
        android:layout_width="200dp"
        android:layout_height="85dp"
        android:text="Trabajos finalizados"
        android:textSize="25dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:background="@drawable/boton1"
        android:textColor="#fff"/>






</RelativeLayout>