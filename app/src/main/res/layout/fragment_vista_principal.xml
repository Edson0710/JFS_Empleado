<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VistaPrincipalFragment">


        <TextView
            android:id="@+id/bienvenido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="Bienvenido"
            android:textColor="#000"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bienvenido"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="Nombre"
            android:textColor="#000"
            android:textSize="22sp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/Button_Curriculum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nombre"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/boton1"
            android:padding="8dp"
            android:text="Curriculum"
            android:textColor="#fff" />


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imagen"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@+id/nombre"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp" />

        <Button
            android:id="@+id/Button_OfertasEmpleos"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_above="@+id/Button_MisOfertas"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:background="@drawable/boton1"
            android:text="Ofertas de Empleos"
            android:textColor="#fff"
            android:textSize="25dp" />

        <Button
            android:id="@+id/Button_MisOfertas"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_above="@+id/Button_TrabajosFinalizados"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:background="@drawable/boton1"
            android:text="Mis ofertas"
            android:textColor="#fff"
            android:textSize="25dp" />

        <Button
            android:id="@+id/Button_TrabajosFinalizados"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:background="@drawable/boton1"
            android:text="Trabajos finalizados"
            android:textColor="#fff"
            android:textSize="25dp" />




</RelativeLayout>