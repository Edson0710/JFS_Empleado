<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditarInformacion">

    <TextView
        android:id="@+id/TextView_EditInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Informacion de mi perfil "
        android:drawableRight="@drawable/ic_person"
        android:textSize="25dp"
        android:layout_centerHorizontal="true"
        android:textColor="#000"
        android:layout_marginTop="10dp"/>



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GUARDAR"
        android:layout_below="@+id/TextView_EditInfo"
        android:layout_marginTop="450dp"
        android:layout_alignStart="@+id/TextView_EditInfo"
        android:layout_alignLeft="@+id/TextView_EditInfo"
        android:textColor="#000"
        android:layout_marginLeft="210dp"
        />











</RelativeLayout>